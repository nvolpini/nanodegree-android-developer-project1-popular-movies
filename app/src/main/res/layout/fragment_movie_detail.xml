<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto" >

	<data>

		<variable
			name="movie"
			type="app.popularmovies.model.Movie"/>
	</data>

	<ScrollView android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:context="app.popularmovies.MovieDetailActivityFragment"
				tools:ignore="HardcodedText">

		<LinearLayout style="@style/MovieDetailStyle"
					  android:layout_width="match_parent"
					  android:layout_height="wrap_content"
					  android:layout_marginBottom="@dimen/movie_detail_outer_margins"
					  android:layout_marginEnd="@dimen/movie_detail_outer_margins"
					  android:layout_marginLeft="@dimen/movie_detail_outer_margins"
					  android:layout_marginRight="@dimen/movie_detail_outer_margins"
					  android:layout_marginStart="@dimen/movie_detail_outer_margins"
					  android:orientation="vertical">


			<TextView
				android:moviesDbId="@+moviesDbId/title"
				style="@style/MovieTitleStyle"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="@{movie.title}"
				/>


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>


				<ImageView
					android:moviesDbId="@+moviesDbId/posterImage"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:contentDescription="Movie poster"
					android:src="@drawable/no_poster_185"
					app:moviePoster="@{movie}"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:paddingLeft="@dimen/movie_detail_inner_padding"
					android:paddingRight="@dimen/movie_detail_inner_padding">


					<TextView
						android:moviesDbId="@+moviesDbId/releaseDateString"
						style="@style/MovieYearStyle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/activity_vertical_margin"
						android:layout_marginTop="@dimen/activity_vertical_margin"
						android:text="@{movie.year}"/>

					<TextView
						android:moviesDbId="@+moviesDbId/voteAverage"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text='@{String.format("%1$.1f/10", movie.voteAverage)}'/>


				</LinearLayout>


			</LinearLayout>


			<TextView
				android:moviesDbId="@+moviesDbId/originalTitle"
				style="@style/MovieOriginalTitleStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@{movie.originalTitle}"/>

			<TextView
				android:moviesDbId="@+moviesDbId/overview"
				style="@style/MovieOverviewStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@{movie.overview}"
				/>


		</LinearLayout>
	</ScrollView>
</layout>