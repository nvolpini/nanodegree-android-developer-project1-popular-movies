<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="en"
        android:entries="@array/pref_titles_movies_language"
        android:entryValues="@array/pref_values_movies_language"
        android:key="@string/pref_key_movies_language"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_movies_language"
        android:summary="@string/pref_description_movies_language"/>


    <ListPreference
        android:defaultValue="popularity.desc"
        android:entries="@array/pref_titles_sorting"
        android:entryValues="@array/pref_values_sorting"
        android:key="@string/pref_key_default_sorting"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_default_sorting" />

    <ListPreference
        android:defaultValue="20"
        android:entries="@array/pref_titles_movies_to_download"
        android:entryValues="@array/pref_values_movies_to_download"
        android:key="@string/pref_key_movies_to_download"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_movies_to_download"
        android:summary="@string/pref_description_movies_to_download"/>

</PreferenceScreen>
